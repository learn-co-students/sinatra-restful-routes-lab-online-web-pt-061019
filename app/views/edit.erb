<h1>Edit Your Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
<p><label for="name"><strong>Name:</strong><br />
<input type="text" name="name" value="<%= @recipe.name %>"></p>

<p><label for="ingredients"><strong>Ingredients:</strong><br />
<input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>

<p><label for="cook_time"><strong>Cook Time:</strong><br />
<input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
<br />
<input type="submit" value="submit">
</form>