<h1>Edit</h1>
 <form method="post" action="/recipes/<%= @recipe.id %>">
 <input id="hidden" type="hidden" name="_method" value="patch">
<p>
<label for="recipe_name"> Recipe Name:</label>
  <input type="text" id="name" name="recipe[name]" value="<%=@recipe.name%>">
  </p>
  <p>
  <label for="recipe_ingredients"> Ingredients:</label>
  <input type="text" id="ingredients" name="recipe[ingredients]" value="<%=@recipe.ingredients%>">
  </p>
  <p>
  <label for="recipe_cook_time"> Cook Time:</label>
  <input type="text" id="cook_time" name="recipe[cook_time]" value="<%=@recipe.cook_time%>">
  </p>
<input type="submit" value="edit">
</form>