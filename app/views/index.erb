<h1>Your Recipes</h1>

<% @recipes.each do |recipe| %>
<h3><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
<p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
<p><strong>Cook Time:</strong> <%= recipe.cook_time %></p>
<hr />
<% end %>

<a href="/recipes/new">Add a New Recipe</a>